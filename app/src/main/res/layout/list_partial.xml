<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fransiscus Caesar (01239812391)"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/alamatfarmer"
            android:layout_below="@+id/farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bekasi"/>

        <ImageView
            android:id="@+id/garis"
            android:layout_below="@+id/alamatfarmer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@color/gray"/>

        <RelativeLayout
            android:id="@+id/rltime"
            android:layout_below="@id/garis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/imgtime"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_time"/>
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13 Februari 2018"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/imgtime"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mortality"
            android:layout_below="@+id/rltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgmort"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_dead"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/teksmort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgmort"
                android:layout_marginLeft="10dp"
                android:text="Mortality"
                android:textColor="#000000"
                android:layout_centerVertical="true" />
            <EditText
                android:id="@+id/jumlahmort"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toLeftOf="@+id/hilang"
                android:singleLine="true"
                android:inputType="number"/>
            <TextView
                android:id="@+id/hilang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karung"
                android:layout_alignParentRight="true"
                android:layout_marginRight="57dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/satuanmort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ekor"
                android:layout_toRightOf="@id/jumlahmort"
                android:layout_marginRight="57dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bw"
            android:layout_below="@+id/mortality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgbw"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_weight"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/teksbw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgbw"
                android:text="Body Weight"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/jumlahbw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toLeftOf="@+id/hilang2"
                android:singleLine="true"
                android:inputType="number"/>
            <TextView
                android:id="@+id/hilang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karung"
                android:layout_alignParentRight="true"
                android:layout_marginRight="57dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/satuanbw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gram"
                android:layout_toRightOf="@id/jumlahbw"
                android:layout_marginRight="57dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/inputfeed1"
            android:layout_below="@+id/bw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgfeed1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_feed"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/teksfeed1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgfeed1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="Feed Use"/>

                <TextView
                    android:id="@+id/feed1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/jumlahfeed1"
                    android:layout_toRightOf="@+id/teksfeed1"
                    android:textAlignment="center"
                    android:text="S00" />
                <EditText
                    android:id="@+id/jumlahfeed1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/satuan1"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/satuan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karung"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="57dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputfeed2"
            android:layout_below="@+id/inputfeed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgfeed2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_feed"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/teksfeed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgfeed2"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="Feed Use"/>

                <TextView
                    android:id="@+id/feed2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/jumlahfeed2"
                    android:layout_toRightOf="@+id/teksfeed2"
                    android:textAlignment="center"
                    android:text="S10" />
                <EditText
                    android:id="@+id/jumlahfeed2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/satuan2"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/satuan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karung"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="57dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputfeed3"
            android:layout_below="@+id/inputfeed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgfeed3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_feed"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/teksfeed3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgfeed3"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="Feed Use"/>

                <TextView
                    android:id="@+id/feed3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/jumlahfeed3"
                    android:layout_toRightOf="@+id/teksfeed3"
                    android:textAlignment="center"
                    android:text="S11" />
                <EditText
                    android:id="@+id/jumlahfeed3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/satuan3"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/satuan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karung"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="57dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputfeed4"
            android:layout_below="@+id/inputfeed3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgfeed4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_feed"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/teksfeed4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgfeed4"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="Feed Use"/>

                <TextView
                    android:id="@+id/feed4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/jumlahfeed4"
                    android:layout_toRightOf="@+id/teksfeed4"
                    android:textAlignment="center"
                    android:text="S12" />
                <EditText
                    android:id="@+id/jumlahfeed4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/satuan4"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/satuan4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karung"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="57dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_below="@id/inputfeed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:theme="@style/ColoredButton"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>